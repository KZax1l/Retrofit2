<resources>
    <declare-styleable name="ProcessButton">
        <attr name="pb_textProgress" format="string" />
        <attr name="pb_textComplete" format="string" />
        <attr name="pb_textError" format="string" />
        <attr name="pb_colorProgress" format="color" />
        <attr name="pb_colorComplete" format="color" />
        <attr name="pb_colorError" format="color" />
    </declare-styleable>

    <declare-styleable name="FlatButton">
        <attr name="pb_colorPressed" format="color" />
        <attr name="pb_colorNormal" format="color" />
        <attr name="pb_cornerRadius" format="dimension" />
    </declare-styleable>

    <!-- Base application theme. -->
    <!-- 这里为了隐藏继承自AppCompatActivity的标题栏就得继承选择了Theme.AppCompat.Light.NoActionBar的主题 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@mipmap/bg_application</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--<item name="android:editTextBackground">@drawable/bg_edit_login</item>-->

        <!-- 设置ListView的Item的点击后的颜色 -->
        <!--<item name="android:listChoiceBackgroundIndicator">@color/colorPrimary</item>-->
    </style>

    <style name="HaiNanApp" />

    <style name="HaiNanApp.GridView" parent="@android:style/Widget.GridView" />

    <style name="HaiNanApp.TextNormalStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="HaiNanApp.EditNormalStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">@dimen/dimen_dip_10</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="HaiNanApp.SpinnerStyle" parent="HaiNanApp.TextNormalStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/dimen_dip_20</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="HaiNanApp.PatrolTextStyle" parent="HaiNanApp.TextNormalStyle">
        <item name="android:layout_width">@dimen/dimen_dip_100</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">@dimen/dimen_dip_5</item>
        <item name="android:gravity">center_horizontal|bottom</item>
    </style>

    <style name="HaiNanApp.PatrolTextLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_dip_50</item>
        <!-- 加上这个属性才有下划线 -->
        <item name="android:paddingLeft">@dimen/dimen_dip_20</item>
        <item name="android:paddingRight">@dimen/dimen_dip_20</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="HaiNanApp.LinearLayoutCompatStyle" parent="HaiNanApp.PatrolTextLayoutStyle">
        <item name="android:layout_height">@dimen/dimen_dip_40</item>
    </style>

    <style name="HaiNanApp.PatrolEditStyle" parent="HaiNanApp.TextNormalStyle">
        <item name="android:layout_width">match_parent</item>
        <!--<item name="android:background">@null</item>-->
        <item name="android:paddingLeft">@dimen/dimen_dip_10</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="HaiNanApp.PatrolRecordEditStyle">
        <item name="counterEnabled">true</item>
        <item name="android:paddingLeft">@dimen/dimen_dip_10</item>
        <item name="android:paddingTop">@dimen/dimen_dip_10</item>
        <item name="android:paddingRight">@dimen/dimen_dip_10</item>
        <item name="counterMaxLength">100</item>
        <item name="android:textColorHint">#808080</item>
        <item name="counterOverflowTextAppearance">@style/HaiNanApp.OverflowTextAppearance</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/HaiNanApp.ErrorTextAppearance</item>
    </style>

    <style name="HaiNanApp.OverflowTextAppearance">
        <item name="android:textColor">@color/color_text_error</item>
    </style>

    <style name="HaiNanApp.ErrorTextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="HaiNanApp.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:backgroundDimAmount">0.1</item>
    </style>

    <style name="HaiNanApp.TitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:paddingRight">@dimen/dimen_dip_10</item>
        <item name="titleTextColor">@android:color/white</item>
    </style>

    <style name="HaiNanApp.CreateAttachment" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#8c0202</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_scene_function</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawablePadding">@dimen/dimen_dip_5</item>
    </style>

    <style name="HaiNanApp.SubmitAttachment" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_scene_submit</item>
    </style>

    <style name="HaiNanApp.ListPopupWindowStyle" parent="@style/Widget.AppCompat.ListPopupWindow">
        <!--<item name="android:divider">#959595</item>-->
        <item name="android:dropDownVerticalOffset">@dimen/dimen_dip_10</item>
        <item name="android:dropDownHorizontalOffset">@dimen/dimen_dip_10</item>
    </style>

    <style name="HaiNanApp.ListPopupWindow" parent="Theme.AppCompat">
        <item name="android:listPopupWindowStyle">@style/HaiNanApp.ListPopupWindowStyle</item>
    </style>

</resources>
